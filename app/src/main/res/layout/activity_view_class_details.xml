<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.klass.ViewClassDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_classlist_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_classTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Week 3 Lecture"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_classlist_details" />

    <TextView
        android:id="@+id/txt_class_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="48dp"
        android:text="Class Code:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_classTitle" />

    <TextView
        android:id="@+id/txt_lecturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Lecturer:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txt_class_code"
        app:layout_constraintTop_toBottomOf="@+id/txt_class_code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="K130A42"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_class_code"
        app:layout_constraintStart_toEndOf="@+id/txt_class_code"
        app:layout_constraintTop_toTopOf="@+id/txt_class_code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="Dr. Lam"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_lecturer"
        app:layout_constraintStart_toEndOf="@+id/txt_lecturer"
        app:layout_constraintTop_toTopOf="@+id/txt_lecturer" />

    <TextView
        android:id="@+id/txt_beginTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Begin Time:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txt_lecturer"
        app:layout_constraintTop_toBottomOf="@+id/txt_lecturer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="2.00 p.m."
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_beginTime"
        app:layout_constraintStart_toEndOf="@+id/txt_beginTime"
        app:layout_constraintTop_toTopOf="@+id/txt_beginTime" />

    <TextView
        android:id="@+id/txt_class_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Date:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txt_beginTime"
        app:layout_constraintTop_toBottomOf="@+id/txt_beginTime" />

    <TextView
        android:id="@+id/txt_class_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="2018-07-28"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_class_date"
        app:layout_constraintStart_toEndOf="@+id/txt_class_date"
        app:layout_constraintTop_toTopOf="@+id/txt_class_date" />

</android.support.constraint.ConstraintLayout>